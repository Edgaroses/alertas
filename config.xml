<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.helloworld" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Mi Clima</name>
    <description>
        Mi Clima
    </description>
    <author email="jporre@verticaladvise.com" href="http://verticaladvise.com">
        Vertical Advise
    </author>
    <content src="index.html" />
	
	
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	
	<platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
		<preference name="orientation" value="portrait" />		
    </platform>
	
	
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
		<preference name="orientation" value="portrait" />
        <allow-intent href="market:*" />
		<icon src="www/res/icon/android/icono.png" />
		<icon src="www/res/icon/android/icon-36-ldpi.png"     density="ldpi" />
		<icon src="www/res/icon/android/icon-48-mdpi.png"     density="mdpi" />
		<icon src="www/res/icon/android/icon-72-hdpi.png"     density="hdpi" />
		<icon src="www/res/icon/android/icon-96-xhdpi.png"    density="xhdpi" />		  
    </platform>
	
   	
	<platform name="ios" >
	
		<!--iOS 8.0 +--> 
		<!--iPhone Plus 6--> 
		<icon src="www/res/icon/ios/icon-60@3x.png" width = "180" altura = "180" />
					
		<!--iOS 7.0 +--> 
		<!--iPhone / iPod Touch--> 
		<icon src="www/res/icon/ios/icon-60.png" ancho = "60" height = "60" />
		<icon src="www/res/icon/ios/icon-60@2x.png" width = "120" height = "120" />	
		
		<!-- iPad --> 
		<icon src="www/res/icon/ios/icon-76.png" ancho = altura "76" = "76" />
		<icon src="www/res/icon/ios/icon-76@2x.png" width = "152" height = "152" />
				
		<!--iOS 6.1--> 
		<!--icon Spotlight--> 	
		<icon src="www/res/icon/ios/icon-40.png" ancho = "40" altura = "40" />
		<icon src="www/res/icon/ios/icon-40@2x.png" width = "80" height = "80" />
		
		<!--iPhone / iPod Touch--> 
		<icon src="www/res/icon/ios/icon.png" ancho = altura "57" = "57" />
		<icon src="www/res/icon/ios/icon@2x.png" width = altura "114" = "114" />
		
		<!--iPad--> 
		<icon src="www/res/icon/ios/icon-72.png" ancho = altura "72" = "72" />
		<icon src="www/res/icon/ios/icon-72@2x.png" width = "144" altura = "144" />
		
		<!--iPhone Spotlight y el icon Configuración--> 
		<icon src="www/res/icon/ios/icon-small.png" ancho = "29" height = "29" />
		<icon src="www/res/icon/ios/icon-small@2x.png" width = "58" height = "58" />
		
		<!--iPad Spotlight y el icon Configuración--> 
		<icon src="www/res/icon/ios/icon-50.png" ancho = "50" altura = "50" />
		<icon src="www/res/icon/ios/icon-50@2x.png" width = "100" height = "100" />
		
    </platform>
	
	
	
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
</widget>